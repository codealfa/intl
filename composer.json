{
    "name": "commerceguys/intl",
    "type": "library",
    "description": "Internationalization library powered by CLDR data.",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-bcmath": ">=8.0",
        "phpseclib/bcmath_compat": "^2.0"
    },
    "suggest": {
        "phpseclib/bcmath_compat": "Polyfill for ext-bcmath if not installed on system"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "mikey179/vfsstream": "1.*"
    },
    "autoload": {
        "psr-4": {
            "CommerceGuys\\Intl\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CommerceGuys\\Intl\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Bojan Zivanovic"
        },
        {
            "name": "Jonathan Sacksick"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    }
}
